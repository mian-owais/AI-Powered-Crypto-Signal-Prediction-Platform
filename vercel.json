{
  "version": 2,
  "framework": "flask",
  "buildCommand": "pip install -r requirements-vercel.txt",
  "outputDirectory": "public",
  "env": {
    "PYTHON_VERSION": "3.11"
  },
  "functions": {
    "api/*.py": {
      "memory": 1024,
      "maxDuration": 60
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/app.py"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
}
